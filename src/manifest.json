{
	"name": "Shader Editor",
	"version": "1.0.16",
	"minimum_chrome_version": "10.0",
	"devtools_page": "devtools.html",
	"icons": {
		"128": "icon_128.png",
		"48": "icon_48.png",
		"16": "icon_16.png"
	},
	"description": "Live editing shaders in the browser.",
	"background": {
		"scripts": [
			"background.js"
		]
	},
	"content_scripts": [{
		"matches": ["<all_urls>"],
		"js": ["jquery.min.js","content_script.js", "popup.js", "checkPage.js"],
		"run_at": "document_end",
		"all_frames": true
	} ],
	"permissions": [
		"http://*/*",
		"https://*/*",
		"webNavigation",
		"storage",
		"activeTab"
	],
	"browser_action": {
	   "default_popup": "popup.html"
	  },
	"manifest_version": 2,
	"content_security_policy": "default-src 'self' chrome-extension-resource: ; img-src *; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-eval'; connect-src *; frame-src *;",
	"web_accessible_resources": [
		"*"
	]
}
